<script>


function cancelOrder(proId) {

    console.log(proId)
    swal({
      title: "Are you sure? You want to cancel the order",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        if (willDelete) {


          $.ajax(
            {
              url: `/cancel-order/${proId}`,
              method: 'get',

              success: (response) => {

                if (response.status) {

                  swal("Poof! Your order has been cancelled!", {
                    icon: "success",
                  }).then(
( )=>{
   location.reload()
}


                  )
                 
                }
              }
            }
          )
        } else {
          swal("order is not cancelled");
        }
      });


  }
  ;
  
function returnOrder(proId) {

    console.log(proId)
    swal({
      title: "Are you sure? You want to return the order",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        if (willDelete) {


          $.ajax(
            {
              url: `/return-order/${proId}`,
              method: 'get',

              success: (response) => {

                if (response.status) {

                  swal("Poof! Your order return is placed !", {
                    icon: "success",
                  }).then(
( )=>{
   location.reload()
}


                  )
                 
                }
              }
            }
          )
        } else {
          swal("return request cancelled");
        }
      });


  }
  ;


</script>

