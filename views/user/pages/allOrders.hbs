  function cancelOrder(orderId) {




    console.log(orderId)
    swal({
      title: "Are you sure? You want to cancel the order",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        if (willDelete) {


          $.ajax(
            {
              url: `/cancel-order/${orderId}`,
              method: 'get',

              success: (response) => {

                if (response.status) {

                  swal("Poof! Your order has been canceled!", {
                    icon: "success",



                  });
                  location.href = "/orders"
                }
              }
            }
          )






        } else {
          swal("Your order is not cancelled");
        }
      });






    console.log(orderId)




  }
